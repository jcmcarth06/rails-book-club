<!DOCTYPE html>
<html>
  <head>

  
    <title>BookClub</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://jenil.github.io/bulmaswatch/solar/bulmaswatch.min.css">
    <div class="wrapper" role="navigation">
    
  </head>
  <body>

  <nav class="navbar" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <a class="navbar-item" href="https://versions.bulma.io/0.7.0">

    </a>

    <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false">
    <div class="container">
      <% if logged_in? %>
        <strong><a class="navbar-brand" href="<%= books_path %>"/>Home</a> | 
        <%= link_to "#{current_user.name}'s Profile", user_path(current_user), class:"navbar-brand"%> | 
        <%= link_to "Genres", genres_path, class:"navbar-brand"%> |  
        <%= link_to "Sign Out", signout_path, class:"navbar-brand",method:'delete' %><br></strong>
      <% end %>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>
</nav>
  
  <div class="wrapper" role="navigation">
      <% flash.each do |type, msg| %>
        <br><div class="alert alert-warning" role-"alert" >
          <%= msg %>
        </div>
      <% end %>
      <section class="section">
      <div class="content">
        <%= yield %>
      </div>
    </section>
  </body>
</html>