<!DOCTYPE html>
<html>
  <head>
    <title>BookClub</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <div class="wrapper" role="navigation">
      <div class="container">
        <% if !current_user %>
          <a class="navbar-brand" href="<%= root_url %>"/>Home</a>
          <a class="navbar-brand" href="<%= new_user_path %>"/>Sign Up</a>
          <%= link_to "Log in", signin_path, class:"navbar-brand" %>
        <% end %>
        <% if current_user %>
          <a class="navbar-brand" href="<%= books_path %>"/>Home</a>
          <%= link_to "#{current_user.name}'s Profile", user_path(current_user), class:"navbar-brand"%>
          <%= link_to "Sign Out", signout_path, class:"navbar-brand",method:'delete' %>
        <% end %>
    <%= yield %>
  </body>
</html>