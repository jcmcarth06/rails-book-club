<%=form_for(@book) do |f|%>
  <div class="form-group">
      <%= f.label :Title %>:<br>
      <%= f.text_field :title, class: "form-control" %></div><br>
  <div class="form-group">
      <%= f.label :Author %>:<br>
      <%= f.text_field :author, class: "form-control" %></div><br>
  <div class="form-group">
      <%= f.label :Genre%>:<br>
      <%= f.collection_check_boxes :genre_ids, Genre.all, :id, :name, class: "form-control" %></div><br>
  <div class="form-group">
      <%= f.label :Description %>:<br>
      <%= f.text_area :description, class: "form-control" %></div><br>
  <div class="actions">
      <%= f.submit class: "btn btn-primary" %>
      </div>
  <% end %>